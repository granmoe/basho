{
  "parser": "babel-eslint",
  "extends": ["standard", "prettier", "prettier/standard", "prettier/react"],
  "plugins": ["standard", "react"],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "react/jsx-uses-vars": "error"
  }
}
